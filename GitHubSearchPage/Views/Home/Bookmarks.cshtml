@model IEnumerable<GitHubSearchPage.Models.RepositoryViewModel>

@{
    ViewBag.Title = "Bookmarks";
}

<h2>Your Bookmarks</h2>

<div class="container">

    <div class="row text-center text-left">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <div class="col-lg-3 col-md-4 col-xs-6">
                <img class="img-fluid img-thumbnail" src=@item.RepoAvatarUrl alt="" height="150" width="150" />
                <div style="margin-top:20px; margin-bottom:20px;">
                    Name: @item.RepoName
                </div>
            </div>
            }
        }


    </div>

</div>
